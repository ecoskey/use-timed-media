{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2017",
        "module": "commonjs",
        "strict": true,

        "jsx": "preserve",

        "outDir": "./dist",

        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types",

        "typeRoots": [ "./typings", "./node_modules/@types"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "./typings"]
}